<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <rotate android:fromDegrees="45" android:toDegrees="45">
            <shape android:shape="line">
                <stroke
                    android:color="@color/text_color"
                    android:width="2dp"/>
            </shape>
        </rotate>
    </item>
    <item>
        <rotate android:fromDegrees="135" android:toDegrees="135">
            <shape android:shape="line">
                <stroke
                    android:color="@color/text_color"
                    android:width="2dp"/>
            </shape>
        </rotate>
    </item>
</layer-list>